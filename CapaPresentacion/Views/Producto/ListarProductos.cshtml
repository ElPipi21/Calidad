@model IEnumerable<CapaDominio.Entidades.Producto>

@{
    ViewBag.Title = "ListarProductos";
}

@*<head>
    
    <link rel="stylesheet" href="~/Fondo/Fondo.css" />
</head>*@
    @*<h1><span class="badge badge-success">BIENVENIDOS AL MEJOR RESTAURANTE DEL PERÚ</span></h1>*@

@*<body>*@
 
    <div class="fondo">
        <div class="row">
            @foreach (var producto in Model)
            {
                <div class="col-md-4 pt-3 pb-3">
                    @*<div class="card">*@
                    <img class="card-img-top img-responsive rounded" src="@Html.DisplayFor(modelproducto => producto.Imagen)" width="219" height="200" alt="Card image cap">
                    <div class="card-body">
                        <h4 class="card-title">@Html.DisplayFor(modelproducto => producto.Nombre)</h4>

                        <p class="card-text">@Html.DisplayFor(modelproducto => producto.Descripcion)</p>
                        <span class="badge badge-danger">Precio: @Html.DisplayFor(modelproducto => producto.Precio) soles</span>
                        <br />
                        <span class="badge badge-primary">Categoria: @Html.DisplayFor(modelproducto => producto.Categoria.Nombre)</span>
                    </div>
                    <div class="card-footer text-center">
                        <button class="btn btn-warning" onclick="AgregarProductosCarrito(@Json.Encode(producto))">Agregar al pedido</button>
                    </div>
                    @*</div>*@
                </div>
            }
        </div>
    </div>
@*</body>*@
